#!/usr/bin/env python
__metaclass__ = type

import os.path
import subprocess
import sys

import jujupy
from deploy_stack import destroy_environment


def main():
    mydir = os.path.dirname(os.path.abspath(sys.argv[0]))
    for env in sys.argv[1:]:
        environment = jujupy.Environment.from_config(env)
        destroy_environment(environment, mydir)


if __name__ == '__main__':
    main()
